@{
    ViewData["Title"] = "About Us";
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .about-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1a1a1a;
        border-radius: 10px;
        display: flex;
        gap: 30px;
        align-items: flex-start;
    }

    .about-image-container {
        flex: 1;
    }

    .about-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .map-container {
        margin-top: 20px;
    }

        .map-container iframe {
            width: 100%;
            height: 300px;
            border: 0;
            border-radius: 10px;
        }

    .about-info {
        flex: 2;
    }

        .about-info h1 {
            color: #B30000;
            margin-bottom: 20px;
        }

        .about-info p {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

    .contact-info {
        margin-top: 30px;
        font-size: 1.1rem;
    }

        .contact-info p {
            margin: 10px 0;
        }

        .contact-info a {
            color: #B30000;
            text-decoration: none;
        }

            .contact-info a:hover {
                text-decoration: underline;
            }

    .social-media {
        margin: 20px 0;
    }

        .social-media a {
            color: #B30000;
            text-decoration: none;
            margin: 0 10px;
            font-size: 1.1rem;
        }

            .social-media a:hover {
                text-decoration: underline;
            }

    .opening-hours {
        margin: 20px 0;
    }

        .opening-hours h3 {
            color: #B30000;
            margin-bottom: 10px;
        }

        .opening-hours p {
            margin: 5px 0;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .about-container {
            flex-direction: column;
            align-items: center;
        }

        .about-image-container {
            width: 100%;
            max-width: 800px; /* Larger image on mobile */
        }

        .about-info {
            width: 100%;
        }
    }
</style>

<div class="about-container">
    <!-- Left Side: Image and Map -->
    <div class="about-image-container">
        <!-- Image -->
        <img src="/info/about-us.webp" alt="About Us" class="about-image" />

        <!-- Map -->
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2970.1234567890123!2d24.12345678901234!3d42.12345678901234!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDLCsDA3JzI0LjQiTiAyNMKwMDcnMjQuNCJF!5e0!3m2!1sen!2sbg!4v1234567890123!5m2!1sen!2sbg"
                    allowfullscreen>
            </iframe>
        </div>
    </div>

    <!-- Right Side: Information -->
    <div class="about-info">
        <h1>About Us</h1>
        <p>
            Ever since our cinema opened in 1998, our doors are open for everyone who enjoys a good movie! From golden-age
            classics to hidden gems and modern masterpieces, we showcase movies from every era, bringing timeless stories 
            back to life the way they were meant to be seen. Whether you're revisiting a beloved favorite or discovering a
            cult classic for the first time, our carefully curated screenings turn every visit into a cinematic time machine.
            At Cinema Rewind, every night is a journey through film history—so grab some popcorn, take your seat, and let the magic of the movies begin!
        </p>

        <!-- Contact Information -->
        <div class="contact-info">
            <p><strong>Location:</strong> Gladstone 1, Plovdiv</p>
            <p><strong>Phone:</strong> <a href="tel:+359876747045">+359876747045</a></p>
        </div>

        <!-- Social Media Links -->
        <div class="social-media">
            <h3>Follow Us</h3>
            <a href="https://facebook.com" target="_blank">Facebook</a>
            <a href="https://instagram.com" target="_blank">Instagram</a>
            <a href="https://twitter.com" target="_blank">Twitter</a>
        </div>

        <!-- Opening Hours -->
        <div class="opening-hours">
            <h3>Opening Hours</h3>
            <p>Monday - Thursday: 10:00 AM - 12:00 PM</p>
            <p>Friday - Sunday: 10:00 AM - 02:00 AM</p>
        </div>
    </div>
</div>