@model List<VintageCinema.Models.ScreeningModel>

@{
    ViewData["Title"] = "Admin Panel";
    var movies = ViewBag.Movies as List<VintageCinema.Models.MovieModel> ?? new List<VintageCinema.Models.MovieModel>();
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .admin-container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #1a1a1a;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 0, 0, 0.3);
        flex: 1; 
    }

    h2 {
        color: #B30000;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn {
        background-color: #B30000;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
        transition: background-color 0.3s ease;
        font-size: 16px;
    }

    .btn:hover {
        background-color: #ff1a1a;
    }

    select, input {
        background-color: #333;
        color: white;
        padding: 10px;
        border: 1px solid #444;
        border-radius: 5px;
        margin-bottom: 10px;
        width: 100%;
        font-size: 16px;
    }

    /* Responsive Table */
    .table-container {
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border: none;
        min-width: 600px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #444;
        border: none;
    }

    th {
        background-color: #B30000;
        color: white;
    }

    tr:hover {
        background-color: #333;
    }

    .actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .actions form {
        margin: 0;
    }

    .actions .btn {
        margin: 0;
        font-size: 14px;
        padding: 8px 12px;
    }

    hr {
        border: 1px solid #444;
        margin: 20px 0;
    }

    /* ✅ Mobile Styling */
    @@media (max-width: 768px) {
        .admin-container {
            padding: 15px;
        }

        .btn {
            width: 100%; /* Full-width buttons for easier clicking */
            text-align: center;
        }

        select, input {
            padding: 8px;
            font-size: 14px;
        }

        .actions {
            flex-direction: column;
            gap: 5px;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
        }
    }
</style>

<div class="admin-container">
    <h2>Admin Panel - Manage Screenings</h2>

    <!-- Screening Form -->
    <form method="post" action="@Url.Action("Create")">
        <label>Select Movie:</label>
        <select name="MovieId" required>
            @foreach (var movie in movies)
            {
                <option value="@movie.Id">@movie.Title</option>
            }
        </select>

        <label>Screening Date & Time:</label>
        <input type="datetime-local" name="DateTime" required />

        <label>Format:</label>
        <select name="Format" required>
            <option value="2D">2D</option>
            <option value="3D">3D</option>
            <option value="IMAX">IMAX</option>
        </select>

        <label>Price:</label>
        <input type="number" step="0.20" name="Price" required />

        <button type="submit" class="btn">Add Screening</button>
    </form>

    <hr>

    <!-- List of Screenings -->
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Date & Time</th>
                    <th>Format</th>
                    <th>Price</th>
                    <th>Actions</th>
                    <th>Reservations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var screening in Model.OrderBy(m => m.DateTime).Where(m => m.DateTime>=DateTime.Today))
                {
                    <tr>
                        <td>@screening.Movie.Title</td>
                        <td>@screening.DateTime</td>
                        <td>@screening.Format</td>
                        <td>$@screening.Price.ToString("0.00")</td>
                        <td class="actions">
                            <form method="post" action="@Url.Action("Delete")" style="display: inline;">
                                <input type="hidden" name="id" value="@screening.Id" />
                                <button type="submit" class="btn">Delete</button>
                            </form>
                        </td>
                        <td>
                            <a href="@Url.Action("Reservations", new { screeningId = screening.Id })" class="btn">View Reservations</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>