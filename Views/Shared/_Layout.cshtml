<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VintageCinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VintageCinema.styles.css" asp-append-version="true" />
    <style>
        /* FIRST NAVBAR (Black background with dark red text & buttons) */
        .top-navbar {
            background-color: black !important;
            padding: 15px;
            height: 70px; /* Adjusted height */
            line-height: 30px; /* Vertical alignment */
        }

            .top-navbar .navbar-brand {
                color: #b30000 !important; /* Dark Red */
                font-weight: bold;
                font-size: 1.5rem;
            }

                .top-navbar .navbar-brand:hover {
                    color: #ff1a1a !important; /* Slightly Brighter Red */
                }

            .top-navbar .btn {
                background-color: #b30000; /* Dark Red */
                border: none;
                color: white;
                padding: 5px 10px;
                transition: 0.3s ease;
            }

                .top-navbar .btn:hover {
                    background-color: #800000; /* Even Darker Red */
                }

            .top-navbar .auth-info {
                color: white;
                margin-right: 15px;
                font-weight: bold;
            }

        /* SECOND NAVBAR (Dark Red background with black button-like links) */
        .second-navbar {
            background-color: #800000 !important; /* Dark Red */
            padding: 0;
        }

            .second-navbar .nav-item {
                margin: 0;
            }

            .second-navbar .nav-link {
                background-color: black;
                color: white !important;
                padding: 10px 20px;
                border-radius: 5px;
                margin: 5px;
                transition: 0.3s;
                font-size: 1.1rem;
            }

                .second-navbar .nav-link:hover {
                    background-color: #b30000; /* Dark Red Hover */
                }

        /* REMOVE GAP BETWEEN NAVBARS */
        .navbar + .navbar {
            margin-top: 0 !important;
        }

        /* KEEP CONTENT FULL WIDTH */
        .wide-container {
            max-width: 100%;
        }

        .auth-buttons {
            margin-left: 10px; /* Adds space between buttons */
        }
    </style>
</head>
<body>
    <header>
        <!-- FIRST NAVBAR -->
        <nav class="navbar navbar-expand-sm top-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VintageCinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="background-color: #B30000; border: none; padding: 10px;">
                    <span class="navbar-toggler-icon" style="background-color: white; width: 20px; height: 3px;"></span>
                </button>
                <!-- Authentication Section -->
                <div class="d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="auth-info">
                            <span>@User.Identity.Name</span>
                        </div>
                        <div class="auth-buttons">
                            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                <button type="submit" class="btn">Logout</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="auth-buttons">
                            <a href="/Account/Login" class="btn">Login</a>
                        </div>
                        <div class="auth-buttons">
                            <a href="/Account/Register" class="btn">Register</a>
                        </div>
                    }
                </div>
            </div>
        </nav>

        <!-- SECOND NAVBAR -->
        <nav class="navbar navbar-expand-sm second-navbar">
            <div class="container d-flex justify-content-center">
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VintageCinema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>